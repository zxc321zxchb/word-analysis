# ==========================================
# Document Analysis Service - Environment Configuration
# ==========================================

# ------------------------------------------
# Database Configuration
# ------------------------------------------
DATABASE_URL=mysql+pymysql://doc_user:doc_password@mysql:3306/doc_analysis
# MySQL exposed port on host machine (default: 3306)
MYSQL_PORT=3306

# ------------------------------------------
# API Configuration
# ------------------------------------------
API_HOST=0.0.0.0
# API exposed port on host machine (default: 8000)
API_PORT=8000
API_PREFIX=/api/v1

# ------------------------------------------
# CORS Configuration (JSON array format)
# ------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ------------------------------------------
# Content Format Configuration
# Options: "html", "json", "both"
# - "html": Return only HTML content (smaller response)
# - "json": Return only JSON content (for rich text editors)
# - "both": Return both HTML and JSON (largest response)
# ------------------------------------------
CONTENT_FORMAT=both

# ------------------------------------------
# File Upload Configuration
# ------------------------------------------
# Maximum size of a single file (MB)
MAX_FILE_SIZE_MB=50
# Maximum total upload size for multiple files (MB)
MAX_UPLOAD_SIZE_MB=100

# ------------------------------------------
# Gzip Compression Configuration
# ------------------------------------------
ENABLE_GZIP=true
GZIP_MIN_SIZE=1000
GZIP_LEVEL=6

# ------------------------------------------
# Pagination Configuration
# ------------------------------------------
MAX_PAGE_SIZE=100
DEFAULT_PAGE_SIZE=10

# ------------------------------------------
# Document Parser Configuration
# ------------------------------------------
MAX_HEADING_LEVEL=9

# ------------------------------------------
# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# ------------------------------------------
LOG_LEVEL=INFO
